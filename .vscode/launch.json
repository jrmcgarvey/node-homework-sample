// .vscode/launch.json
{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Express App with Env Vars",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": [
        "--inspect-brk",
        "app.js"
      ],
      "port": 9229,
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development",
        "PORT": "3000",
      }
    }
  ]
}
